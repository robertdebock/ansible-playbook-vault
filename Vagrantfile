Vagrant.configure("2") do |config|
  config.vm.define "vault-a-1" do |config|
    config.vm.box = "centos/8"
    config.vm.synced_folder '.', '/vagrant', disabled: true
    config.vm.provider :libvirt do |domain|
      domain.memory = 1024
      domain.cpus = 1
    end
  end
  config.vm.define "vault-a-2" do |config|
    config.vm.box = "centos/8"
    config.vm.synced_folder '.', '/vagrant', disabled: true
    config.vm.provider :libvirt do |domain|
      domain.memory = 1024
      domain.cpus = 1
    end
  end
  config.vm.define "vault-a-3" do |config|
    config.vm.box = "centos/8"
    config.vm.synced_folder '.', '/vagrant', disabled: true
    config.vm.provider :libvirt do |domain|
      domain.memory = 1024
      domain.cpus = 1
    end
  end
  config.vm.define "vault-b-1" do |config|
    config.vm.box = "centos/8"
    config.vm.synced_folder '.', '/vagrant', disabled: true
    config.vm.provider :libvirt do |domain|
      domain.memory = 1024
      domain.cpus = 1
    end
  end
  config.vm.define "vault-b-2" do |config|
    config.vm.box = "centos/8"
    config.vm.synced_folder '.', '/vagrant', disabled: true
    config.vm.provider :libvirt do |domain|
      domain.memory = 1024
